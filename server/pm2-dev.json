{
  "apps": [{
    "name": "koa2-starter",
    "script": "server/src/index.js",
    "watch": ["server", "client/src"],
    "ignore_watch": ["node_modules", "server/log", "client", "upload"],
    "watch_options": {
      "followSymlinks": false
    },
    "error_file": "./server/log/err.log",
    "out_file": "./server/log/out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "env": {
      "NODE_ENV": "development"
    },
    "exec_mode": "fork",
    "autorestart": false
  }]
}
